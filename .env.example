# ===========================================
# CheapShot Multi-Bot Configuration
# ===========================================

# Discord Bot Tokens - Get from https://discord.com/developers/applications
# Add as many bots as you need (up to 20)
DISCORD_TOKEN_1=your_first_bot_token
DISCORD_TOKEN_2=your_second_bot_token
DISCORD_TOKEN_3=your_third_bot_token
DISCORD_TOKEN_4=your_fourth_bot_token
DISCORD_TOKEN_5=your_fifth_bot_token

# ===========================================
# API Configuration
# ===========================================

# OpenAI-compatible API Configuration
API_BASE=https://ai-api.skmredacted.com
API_KEY=your_api_key_here

# AI Model for text chat (e.g., claude-sonnet-4.5, claude-opus-4-5, gpt-5, etc.)
AI_MODEL=claude-sonnet-4.5

# AI Model for voice chat (faster model recommended for real-time conversation)
# Falls back to GATEKEEPER_MODEL, then AI_MODEL if not set
VOICE_MODEL=gpt-4.1

# ===========================================
# Voice Channel / Speech-to-Text (Deepgram)
# ===========================================

# Deepgram API Keys - Get from https://deepgram.com/
# Required for voice channel transcription and text-to-speech
#
# MULTI-KEY SUPPORT: Add multiple keys for load balancing
# Each key has its own rate limits (per account):
#   - Speech-to-text REST: 100 concurrent
#   - Speech-to-text WSS: 50 concurrent  (used for live transcription)
#   - Deepgram Whisper: 5 concurrent
#   - Text-to-speech: 15 concurrent (REST + WSS combined)
#   - Voice Agent API: 15 concurrent
#   - Audio Intelligence: 10 concurrent
#
# The system automatically load balances across all keys using round-robin
# with tracking to prevent overloading any single key.
#
# Example with 50 keys: Total STT capacity = 50 * 50 = 2,500 concurrent
#                       Total TTS capacity = 50 * 15 = 750 concurrent
DEEPGRAM_API_KEY_1=your_first_deepgram_key
DEEPGRAM_API_KEY_2=your_second_deepgram_key
DEEPGRAM_API_KEY_3=your_third_deepgram_key
# ... add up to DEEPGRAM_API_KEY_100

# Legacy single key support (if you only have one key)
# This is used if no numbered keys are found
# DEEPGRAM_API_KEY=your_deepgram_api_key


# ===========================================
# Optional Settings
# ===========================================

# Maximum concurrent AI requests (queue overflow limit)
MAX_CONCURRENT_REQUESTS=30

# Allowed Channel ID (bot will only respond in this channel, leave empty for all channels)
ALLOWED_CHANNEL_ID=

# Auto-moderation toggle (set to false to disable, defaults to true)
MODERATION_ENABLED=true

# ===========================================
# Dashboard Configuration
# ===========================================

# Discord OAuth2 - Get from https://discord.com/developers/applications â†’ OAuth2
DISCORD_CLIENT_ID=your_client_id
DISCORD_CLIENT_SECRET=your_client_secret

# Dashboard session secret (generate a random string)
DASHBOARD_SESSION_SECRET=generate_a_random_secret_here

# Redirect URI (must match what's registered in Discord Developer Portal)
DASHBOARD_REDIRECT_URI=https://cheapshot.skmredacted.com/callback

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================

# PostgreSQL connection settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cheapshot_dashboard
POSTGRES_USER=cheapshot
POSTGRES_PASSWORD=cheapshot_secure_password

# Or use a full connection string (overrides individual settings above)
# DATABASE_URL=postgresql://cheapshot:cheapshot_secure_password@localhost:5432/cheapshot_dashboard
